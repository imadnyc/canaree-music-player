<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    tools:layout_width="150dp">

    <dev.olog.shared.widgets.imageview.ShapeImageView
        android:id="@+id/cover"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:color/holo_red_dark" />

    <FrameLayout
        android:id="@+id/scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#8000"
        app:layout_constraintBottom_toBottomOf="@+id/cover"
        app:layout_constraintEnd_toEndOf="@+id/cover"
        app:layout_constraintStart_toStartOf="@+id/cover"
        app:layout_constraintTop_toTopOf="@+id/cover">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/vd_lock"
            android:tint="#FAFAFA" />

    </FrameLayout>

    <TextView
        android:id="@+id/firstText"
        style="@style/Album.MainText"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cover"
        tools:text="Hip hop" />

    <TextView
        android:id="@+id/secondText"
        style="@style/Album.SecondaryText"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:singleLine="true"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstText"
        tools:text="/folder/folder/musica/download" />

</androidx.constraintlayout.widget.ConstraintLayout>

