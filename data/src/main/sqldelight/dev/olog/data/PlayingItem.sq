CREATE TABLE playing_item (
    playable_id INTEGER NOT NULL PRIMARY KEY
);

delete:
DELETE FROM playing_item;

insert:
INSERT OR REPLACE INTO playing_item VALUES (?);

select:
SELECT *
FROM (
    SELECT *
    FROM songs_view
    UNION
    SELECT *
    FROM podcast_episodes_view
)
WHERE id IN (SELECT playing_item.playable_id FROM playing_item);